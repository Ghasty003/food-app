<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    android:padding="40dp"
    tools:context=".fragments.HomeFragment">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/food_logo"
    />

    <TextView
        android:layout_below="@id/logo"
        android:id="@+id/delicious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delicious"
        android:textSize="38sp"
        android:textColor="@color/black"
    />

    <TextView
        android:id="@+id/food_for_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="food for you"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_below="@id/delicious"
    />

    <SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/food_for_you"
        android:layout_marginTop="30dp"
        android:background="@drawable/search_bg"
        android:queryHint="Search for foods"
        android:paddingHorizontal="10dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:layout_below="@id/search_view"
        app:tabIndicatorColor="@color/cart_num_bg"
        app:tabSelectedTextColor="@color/cart_num_bg"
        app:tabMode="scrollable"
        android:layout_marginTop="40dp">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foods"
        />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/drinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drinks"
        />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/fruits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fruits"
        />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/snacks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="snacks"
        />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/ice_cream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ice creams"
        />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/fish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fishes"
        />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_layout"
        android:layout_marginTop="30dp"
    />

</RelativeLayout>